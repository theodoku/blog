<h1 class="text-center">New Comment</h1>

<%= form_with(model: [@user, @comment], url: user_post_comments_path(@user, @post)) do |form| %>
    <div class="form-group">
  <%= form.text_area :text, placeholder: "Enter your comment here", class: "form-control" %>
  </div>
  <%= form.submit "Add Comment",  class: "btn btn-primary" %>
<% end %>
